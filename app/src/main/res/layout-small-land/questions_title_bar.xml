<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="25dp"
    android:gravity="center"
    android:id="@+id/question_page_titlebar">

    <Button
        android:id="@+id/bspeak"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/speak"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/tv_questions_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_catego"
        android:textSize="15sp"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/bstop_mute"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/mute"
        android:layout_marginLeft="5dp"/>
</LinearLayout>